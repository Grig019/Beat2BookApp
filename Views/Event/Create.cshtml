@{
}

<form method="post" asp-action="Create" enctype="multipart/form-data" asp-controller="Event">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
    <div class="form-group">
        <label asp-for="Title">Event Title</label>
        <input asp-for="Title" class="form-control" placeholder="Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Event Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

 

    <div class="form-group">
        <label asp-for="EventCategory">Event Category</label>
        <select asp-for="EventCategory" asp-items="@(Html.GetEnumSelectList<EventCategory>())" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="EventCategory" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventDate">Event Date</label>
        <input asp-for="EventDate" type="datetime-local" class="form-control" placeholder="Event Date">
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address.Street">Event Location Street</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Event Location Street">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address.City">Event Location City</label>
        <input asp-for="Address.City" class="form-control" placeholder="City">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address.State">Event Location State</label>
        <input asp-for="Address.State" class="form-control" placeholder="State">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address.ZipCode">Event Location ZipCode</label>
        <input asp-for="Address.ZipCode" class="form-control" placeholder="ZipCode">
        <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span> 
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form> 